<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity_old" >

    <TextView
        android:id="@+id/TextViewThreegInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:text="ThreegStateTextView" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Start" />

    <Button
        android:id="@+id/StopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/StartButton"
        android:layout_alignBottom="@+id/StartButton"
        android:layout_alignParentRight="true"
        android:text="Stop" />

    <TextView
        android:id="@+id/TextViewNetworkInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextViewThreegInfo"
        android:layout_alignRight="@+id/TextViewThreegInfo"
        android:layout_below="@+id/TextViewThreegInfo"
        android:text="NetworkInfo TextView" />

    <Button
        android:id="@+id/UploadSpeedTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextViewNetworkInfo"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/TextViewNetworkInfo"
        android:layout_marginBottom="67dp"
        android:text="Upload Speed Test" />

</RelativeLayout>
